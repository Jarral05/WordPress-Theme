{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "palette": [
                { "slug": "j-white", "color": "rgb(255 255 255)", "name": "Jarral White" },
                { "slug": "j-gray-100", "color": "rgb(243 244 246)", "name": "Jarral Gray 100" },
                { "slug": "j-gray-200", "color": "rgb(229 231 235)", "name": "Jarral Gray 200" },
                { "slug": "j-gray-300", "color": "rgb(209 213 219)", "name": "Jarral Gray 300" },
                { "slug": "j-gray-400", "color": "rgb(156 163 175)", "name": "Jarral Gray 400" },
                { "slug": "j-gray-500", "color": "rgb(107 114 128)", "name": "Jarral Gray 500" },
                { "slug": "j-gray-600", "color": "rgb(75 85 99)", "name": "Jarral Gray 600" },
                { "slug": "j-gray-700", "color": "rgb(55 65 81)", "name": "Jarral Gray 700" },
                { "slug": "j-gray-800", "color": "rgb(31 41 55)", "name": "Jarral Gray 800" },
                { "slug": "j-gray-900", "color": "rgb(17 24 39)", "name": "Jarral Gray 900" },
                { "slug": "j-primary", "color": "rgb(239 68 68)", "name": "Jarral Primary" },
                { "slug": "j-accent", "color": "rgb(67 56 202)", "name": "Jarral Accent" },
                { "slug": "j-success", "color": "rgb(52 211 153)", "name": "Jarral Success" },
                { "slug": "j-info", "color": "rgb(96 165 250)", "name": "Jarral Info" },
                { "slug": "j-warning", "color": "rgb(251 146 60)", "name": "Jarral Warning" },
                { "slug": "j-danger", "color": "rgb(236 72 153)", "name": "Jarral Danger" }
            ],
            "background": true,
            "text": true,
            "link": true,
            "custom": true,
            "duotone": [
                { "slug": "j-pink-sunset", "colors": [ "#11245e", "#dc4379" ], "name": "Jarral Pink Sunset" }
            ],
            "defaultGradients": false,
            "gradients": [
                {
                    "slug": "j-summer-dog",
                    "name": "Jarra Summer Dog",
                    "gradient": "linear-gradient(#a8ff78, #78ffd6)"
                }
            ]
        },
        "blocks": {
            "core/site-title": {
                "color": {
                    "defaultPalette": true,
                    "palette": [
                        { "slug": "j-primary", "color": "#ef4444", "name": "Jarral Primary"}
                    ],
                    "link": true,
                    "custom": false,
                    "gradients": [],
                    "customGradient": false
                },
                "typography": {
                    "fontFamilies": [
                        {
                            "fontFamily": "Pacifico, sans-serif",
                            "slug": "j-pasifico",
                            "name": "Jarral Pasifico"
        
                        }
                    ]
                }
            },
            "core/cover": {
                "color": {
                    "duotone": [],
                    "customDuotone": false
                }
            },
            "core/preformatted": {
                "typography": {
                    "fontSizes": [],
                    "customFontSize": false
                }
            }
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        }, 
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Rubik, sans-serif",
                    "slug": "j-rubik",
                    "name": "Jarral Rubik"

                }
            ],
            "fontSizes": [
                { "slug": "small", "size": "0.75rem", "name": "Small" },
                { "slug": "medium", "size": "1.25rem", "name": "Medium" },
                { "slug": "large", "size": "2.25rem", "name": "Large" },
                { "slug": "x-arge", "size": "3rem", "name": "Extra Large" },
                { "slug": "gigantic", "size": "3.75rem", "name": "Gigantic" }
            ],
            "lineHeight": true,
            "dropCap": true,
            "fontWeight": true,
            "fontStyle": true,
            "textTransform": true,
            "letterSpacing": true,
            "textDecoration": true
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1100px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "units": [
                "px",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "blockGap": true
        }
        
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--j-gray-700)",
            "background": "var(--wp--preset--color--j-white)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--j-primary)"
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "gradient": "var(--wp--preset--gradient--j-summer-dog)"
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "2px",
                    "radius": "10px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--j-primary)"
                }
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--j-pasifico)"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--j-rubik)",
            "fontSize": "16px",
            "fontStyle": "normal",
            "fontWeight": "normal",
            "lineHeight": "inherit",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "spacing": {
            "margin": {
                "top": "0px",
                "bottom": "0px",
                "right": "0px",
                "left": "0px"
            }, 
            
            "padding": {
                    "top": "0px",
                    "bottom": "0px",
                    "right": "0px",
                    "left": "0px"
                },
                "blockGap": "4rem"

        }
    }
}